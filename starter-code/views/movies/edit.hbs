<h2>EDIT MOVIE</h2>
{{#with movie}}
<form action="/movies/{{_id}}" method="POST">
<label for="title">Title:</label>
<input type="text" name="title" id="title" value="{{title}}">

<label for="genre">Genre:</label>
<input type="text" name="genre" id="genre" value="{{genre}}">

<label for="plot">Plot:</label>
<input type="text" name="plot" id="plot" value="{{plot}}">

  <h2>Mark the cast:</h2>
    <select name="cast" id="cast" value="" multiple>
{{#each cast}}
  <option value="{{_id}}" selected>{{name}}</option>
  {{/each}}
{{/with }}

  {{#each filteredCelebrities}}
  <option value="{{_id}}">{{name}}</option>
  {{/each}}
  </select>


<button type="submit">Update movie data</button>
</form>